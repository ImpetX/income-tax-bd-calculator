{
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "impliedStrict": true,
            "jsx": true
        }
    },

    "env": {
        "browser": true,
        "node": true,
        "mocha": true
    },

    "globals": {
        "React": true
    },

    "plugins": [
        "react"
    ],

    "rules": {
        "no-console": 0,
        "arrow-spacing": [2, {
            "before": true,
            "after": true
            }
        ],
        "no-var": 2,
        "no-trailing-spaces": 2,
        "indent": [2, 4, {
            "SwitchCase": 1
            }
        ],
        "object-curly-spacing": [2, "never"],
        "react/no-deprecated": [2],
        "react/prop-types": [2],
        "react/jsx-curly-spacing": [2, "never"],
        "react/jsx-indent": [2, 4],
        "react/self-closing-comp": [2, {
                "component": true,
                "html": false
            }
        ]
    }
}